# Production Environment Variables
# Copy this to .env.production and fill in your actual values

# Database (Neon PostgreSQL)
# Get from: https://neon.tech/
DATABASE_URL="postgresql://username:password@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require"

# Redis (Optional - disable for initial deployment)
REDIS_ENABLED="false"
REDIS_HOST="localhost"
REDIS_PORT=6379

# JWT Authentication
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET="CHANGE_THIS_TO_STRONG_RANDOM_SECRET_IN_PRODUCTION"
JWT_EXPIRES_IN="7d"

# AI Provider Configuration
AI_PROVIDER="gemini"

# Google Gemini AI
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="AIzaSyAfbMx7_5rjcePOUCpptoeVajeqFPvoXic"
GEMINI_MODEL="gemini-2.0-flash-exp"

# OpenAI (Optional)
OPENAI_API_KEY=""

# Application
NODE_ENV="production"
PORT=8080

# CORS (Update with your mobile app domain)
CORS_ORIGIN="*"

# File Upload
MAX_FILE_SIZE=10485760
