# Database (PostgreSQL) - Supabase
DATABASE_URL="postgresql://postgres.YOUR_PROJECT_ID:YOUR_PASSWORD@aws-YOUR_REGION.pooler.supabase.com:5432/postgres"

# Redis (Optional - can skip for now, use Docker or install later)
# REDIS_HOST="localhost"
# REDIS_PORT=6379
REDIS_ENABLED="false"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# AI Provider (choose one: 'gemini' or 'openai')
AI_PROVIDER="gemini"

# Google Gemini AI (Recommended for MVP)
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL="gemini-2.0-flash-exp"

# OpenAI (Alternative)
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4o-mini"

# App
NODE_ENV="development"
PORT=3000

# Nutrition API (choose one)
# USDA_API_KEY="your-usda-api-key"
# EDAMAM_APP_ID="your-edamam-app-id"
# EDAMAM_APP_KEY="your-edamam-app-key"

# Mapbox (optional for backend geocoding)
MAPBOX_ACCESS_TOKEN="your-mapbox-token"

# Email Configuration (for Squad invitations)
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
APP_URL="http://localhost:3000"
